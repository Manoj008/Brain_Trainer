<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/my4"
    tools:context="com.first.manoj.braintrainer.Main3DActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0097a7"
        android:weightSum="10">

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:src="@mipmap/icon" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="6.8"
            android:gravity="center_vertical"
            android:text="BRAIN TRAINER"
            android:textColor="#fff"
            android:textSize="22dp" />

        <Button
            android:id="@+id/share"
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1.3"
            android:background="@drawable/share"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/unlock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="WELL DONE \nNew Level Unlocked"
        android:textSize="55dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#fff"
        android:gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/newlevel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="New Level Unlocked"
        android:textSize="45dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#fff"
        android:gravity="center"
        android:visibility="invisible"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:id="@+id/retry"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="30dp"
            android:background="@android:drawable/ic_menu_revert"/>

        <Button
            android:id="@+id/next"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="20dp"
            android:background="@android:drawable/ic_menu_directions" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:text="RETRY"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/nexttext"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="NEXT LEVEL"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center">
            <TextView
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_marginStart="30dp"
                android:layout_width="100dp"
                android:textColor="#fff"
                android:layout_height="match_parent"
                android:text="Your Time"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/your"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_marginStart="60dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#fff"
                android:textSize="20dp"/>

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_marginStart="30dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Best Time"/>

            <TextView
                android:id="@+id/best"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_marginStart="60dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:text=""
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner3d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1042832531270687/5569152964">

    </com.google.android.gms.ads.AdView>



</LinearLayout>
