                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:text="10*10="
                        android:textColor="#000"
                        android:textSize="35dp" />

                    <TextView
                        android:id="@+id/t0"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="#000"
                        android:textSize="38dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"

                        android:layout_weight="4"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="35dp" />


                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"

                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="38dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"

                        android:layout_weight="4"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="35dp" />


                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="38dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="35dp" />


                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="38dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="35dp" />


                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="38dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="35dp" />


                    <TextView
                        android:id="@+id/t5"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
