                        android:textSize="38dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="1dp"
