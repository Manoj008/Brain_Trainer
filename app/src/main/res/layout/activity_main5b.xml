<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my4"
    tools:context="com.first.manoj.braintrainer.Main5BActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="2"
            android:background="#0097a7"
            android:weightSum="10">

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:src="@drawable/clcok" />

            <TextView
                android:id="@+id/secs"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="0 s"
                android:textColor="#fff"
                android:textSize="28dp" />

            <Button
                android:id="@+id/pause_button"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1.5"
                android:background="@android:drawable/ic_media_pause" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:background="@android:drawable/star_on" />

            <TextView
                android:id="@+id/option"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:text="20/20"
                android:textColor="#fff"
                android:textSize="30dp"
                android:gravity="center"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:background="@drawable/question"
            android:gravity="center"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question1"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/question2"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="25dp" />

                <TextView
                    android:enabled="false"
                    android:id="@+id/question3"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="h"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <TextView
                    android:enabled="false"
                    android:id="@+id/question4"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/question5"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="25dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#000"
                    android:textSize="50dp"
                    android:gravity="center|end"
                    android:text="="
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />



                <TextView
                    android:id="@+id/result"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginEnd="50dp"
                    android:gravity="center|bottom"
                    android:layout_gravity="start"
                    android:background="@drawable/question"
                    android:textColor="#000"
                    android:textSize="35dp"
                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/level"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="INTERMEDIATE"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/type"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:text="MULTIPLICATION"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/square"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1">


                <Button
                    android:id="@+id/button0"
                    android:layout_width="2dp"
                    android:layout_marginEnd="120dp"
                    android:layout_marginStart="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/back"
                    android:tag="1"
                    android:textColor="#000"
                    android:text="+"
                    android:textSize="40dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1">


                <Button
                    android:id="@+id/button1"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/back"
                    android:tag="4"
                    android:textColor="#000"
                    android:text="ร"
                    android:textSize="40dp"
                    android:textStyle="bold" />



                <Button
                    android:id="@+id/button2"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/back"
                    android:tag="6"
                    android:text="รท"
                    android:textColor="#000"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1">


                <Button
                    android:id="@+id/button3"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="120dp"
                    android:layout_marginEnd="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/back"
                    android:tag="7"
                    android:textColor="#000"
                    android:text="-"
                    android:textSize="40dp"
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner5b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1042832531270687/7406647114">

    </com.google.android.gms.ads.AdView>

</RelativeLayout>
