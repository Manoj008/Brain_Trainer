<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#607d8b"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.first.manoj.braintrainer.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.2"
        android:background="#0097a7"
        android:weightSum="10">

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:src="@mipmap/icon" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="BRAIN TRAINER"
            android:textColor="#fff"
            android:textSize="22dp" />

        <Button
            android:id="@+id/share"
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1.3"
            android:background="@drawable/share"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/menu"
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1.3"
            android:background="@drawable/menu"
            android:scaleType="centerCrop" />

    </LinearLayout>


    <Button
        android:layout_margin="10dp"
        android:id="@+id/best"
        android:background="@drawable/trophy"
        android:layout_width="50dp"
        android:layout_height="50dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="9.7"
        android:background="#607d8b">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/main_color"
                android:orientation="vertical">

                <Button
                    android:id="@+id/select_one"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/select_one"
                    android:text="SELECT ONE"
                    android:textColor="#fff"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/write_the_result"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/write_the_result"
                    android:text="FILL THE RESULT"
                    android:textColor="#fff"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/write_missing_operator"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/write_missing_operator"
                    android:text="FILL MISSING OPERATOR"
                    android:textColor="#fff"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/write_missing_number"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/write_missing_number"
                    android:text="FILL MISSING NUMBER"
                    android:textColor="#fff"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/compare_the_numbers"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/compare_the_numbers"
                    android:text="COMPARE THE NUMBERS"
                    android:textColor="#fff"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/tables"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/tables"
                    android:text="TIMES TABLES"
                    android:textColor="#fff"
                    android:textSize="25dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
