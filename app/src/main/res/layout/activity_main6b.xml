<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#80cbc4"
    android:weightSum="10"
    tools:context="com.first.manoj.braintrainer.Main6BActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.2"
        android:background="#0097a7"
        android:weightSum="10">

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:src="@mipmap/icon" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="BRAIN TRAINER"
            android:textColor="#fff"
            android:textSize="22dp" />

        <Button
            android:id="@+id/share"
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1.3"
            android:background="@drawable/share"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/menu"
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1.3"
            android:background="@drawable/menu"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_margin="40dp"
            android:background="@drawable/write_missing_number">

            <Button
                android:id="@+id/beginner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="BEGINER"
                android:background="@drawable/easy"
                android:textColor="#fff"
                android:textSize="25dp" />
            <Button
                android:id="@+id/intermediate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lockintermediate"
                android:textColor="#fff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/advance"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lockadvance"
                android:textColor="#fff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/expert"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lockexpert"
                android:textColor="#fff"
                android:textSize="25dp" />


        </LinearLayout>
    </ScrollView>
    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner6b"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1042832531270687/9074952009">
    </com.google.android.gms.ads.AdView>



</LinearLayout>

